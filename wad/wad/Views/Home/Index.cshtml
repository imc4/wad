@model wad.Models.DocumentModels

@{
    ViewBag.Title = "Home Page";
}
@{
    var document1 = "<body id='doc-bod1'><div class='header12'><h1>City Gallery</h1></div><div id='nav1' class='nav12'>London<br>Paris<br>Tokyo<br></div><div id='section1'><h1 class='header12'>London</h1><p class='nav12'>London is the capital city of England. It is the most populous city in the United Kingdom,with a metropolitan area of over 13 million inhabitants.</p><p class='nav12'>Standing on the River Thames, London has been a major settlement for two millennia,its history going back to its founding by the Romans, who named it Londinium.</p></div><div id = 'footer1'>Copyright © W3Schools.com</div></body>";
    var styles = "<style>.header12 {background - color:black;color: white;text - align:center;padding: 5px;}#nav1 {line-height:30px;  background-color:#eeeeee; height:300px; width:100px;float:left;padding:5px; } .nav12 { color: black; } #section1 {    width:350px;    float:left;    padding:10px; }#footer1 {    background-color:black;    color:white;    clear:both;    text-align:center;    padding:5px; }#doc_bod1{background-color:#FFFFFF;</style>";
}
<style type="text/css">
   @Html.Raw(styles)
</style>

<div id="picker"></div>
<div style="text-align: center">@Html.TextBoxFor(m => Model.colour, new { id = "picker_colour" })</div>
<div id="weight-options">
    <!--Using helpers, created a link between the controller values and the check boxes-->
    @Html.CheckBoxFor(m => Model.bold, new { onclick = "boldText(this);", name = "weight-options", id = "boldBox" })<label for="bold">&nbsp;Bold&nbsp;</label>
    &nbsp;
    @Html.CheckBoxFor(m => Model.italic, new { onclick = "italicText(this);", name = "weight-options", id = "italicsBox" })<label for="italics">&nbsp;Italics&nbsp;</label>
</div>
<hr />
<div id="document-container">
    @Html.Raw(@document1)
</div>